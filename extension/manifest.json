{
  "manifest_version": 3,
  "name": "TransKit - Power Inline Translate Kit",
  "version": "1.1.1",
  "description": "Brings instant, AI-powered translation directly to your input fields. No more switching tabs or copy-pastingâ€”just type translate",
  "author": "@FernNguyen",
  "homepage_url": "https://transkit.app",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "action": {
    "default_popup": "pages/popup.html",
    "default_title": "TransKit",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "options_ui": {
    "page": "pages/popup.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-script.js"],
      "css": ["assets/styles/inline-suggestion.css", "assets/styles/selection.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "permissions": ["storage", "offscreen"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["assets/icons/*", "assets/styles/*", "pages/*", "src/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
